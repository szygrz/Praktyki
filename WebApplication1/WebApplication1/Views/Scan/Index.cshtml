@model IEnumerable<WebApplication1.Models.Scan>

@{
    ViewData["Title"] = "Index";
}

<h2>Scanned files</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FilesNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FilesInf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeRunn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recognition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Antyvirus)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FilesNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilesInf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeRunn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recognition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antyvirus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
